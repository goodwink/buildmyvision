!!! 5
%html
%head
  %title Build My Vision
  = stylesheet_link_tag "application", :media => "all"
  = csrf_meta_tags
%body
  .navbar.navbar-fixed-top
    .navbar-inner
      .container
        %a.btn.btn-navbar{data: {toggle: 'collapse', target: '.nav-collapse'}}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to "Build My Vision", root_path, class: 'brand'
        .nav-collapse
          %ul.nav
            %li
              = link_to "Home", root_path, class: 'active'
            %li
              = link_to "About", '#'
            %li
              = link_to "Contact", '#'
  .container
    %p.notice= notice
    %p.alert= alert
    = yield
    %hr
    .footer
      %p Devscoop LLC &copy; 2012
  
  = javascript_include_tag "application"