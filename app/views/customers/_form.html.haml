= simple_form_for @customer, html: {class: 'form-horizontal'} do |f|
  %fieldset
    %legend Step 1: Company information

    = f.error_notification
    = f.input :name, input_html: {rows: 6, class: 'input-xlarge'}
    = f.input :url, input_html: {rows: 6, class: 'input-xlarge'}
    = f.input :description, :as => :text, input_html: {rows: 6, class: 'input-xlarge'}
    = f.input :email, input_html: {class: 'input-xlarge'}

  .form-actions
    = f.button :submit, 'Continue &raquo'.html_safe, class: 'btn-primary'